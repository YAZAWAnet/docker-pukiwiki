#!/bin/sh

cd /var/www

target=/ext/data
mkdir -p $target
for dir in `find * -perm 777 -maxdepth 0`; do
    [[ -d $target/$dir ]] || mv $dir $target
    rm -rf $dir
    ln -s $target/$dir
done

target=/ext/conf
mkdir -p $target
for file in `ls *.ini.php`; do
    [[ -f $target/$file ]] || mv $file $target
    ln -sf $target/$file
done

php-fpm
nginx -g "daemon off;"
